<% title "Search" %>

<%= render 'german_week/search_form' %>

<div style="margin-bottom: 20px;">
  <% @categories.each do |category| %>
    <div style="display: inline-block; margin: 0 5px">
      <%= link_to category.title, search_path(:category => category.title) %>
    </div>
  <% end %>
</div>

<hr />


<% if @events.nil? || @events.length == 0 %>
	<% if !params[:search].nil? || !params[:category].nil?%>
		<p>0 results found.</p>
	<% end %>
<% else %>

    <%= render 'german_week/search_results', :is_html => true %>

  
	<%# will_paginate @events %>
<% end %>
