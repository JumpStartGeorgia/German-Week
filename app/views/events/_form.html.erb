<%= semantic_form_for @event do |f| %>
  	<%= f.inputs do %>
  		<%= f.input :title %>
  		<%= f.input :description, :as => :text %>
  		<%= f.input :event_date %>
  		<%= f.input :start_time %>
  		<%= f.input :end_time %>
  		<%= f.hidden_field :locale , :value => I18n.locale %>
  	<% end %>
	<%= f.actions :submit, :cancel %>
<% end %>

