<% title 'Listing events' %>

<table>
  <tr>
		<th>Time</th>
    <th>Title</th>
    <th>Description</th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= format_time(event.start) %> - <%= format_time(event.end) %></td>
    <td><%= event.title %></td>
    <td><%= truncate(event.description, :length => 100) %></td>
  </tr>
<% end %>
</table>
