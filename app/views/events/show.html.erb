<% title @event.title %>

<div id="time-container">
	<div id="time-block">
		<p id="event_time">
      <%= pretty_time(@event.start, @event.end) %>
		</p>		

		<p>
			<strong><%= t('events.show.place_event') %>:</strong>
			<% if !@event.event_address.nil? && @event.event_address.length > 0 %>
				<%= @event.event_address %>
			<% end %>
		</p>
		<p>
			<strong><%= t('events.show.contact') %>:</strong>
			<% if (!@event.phone.nil? && @event.phone.length > 0) || (!@event.url.nil? && @event.url.length > 0) || (!@event.url2.nil? && @event.url2.length > 0) %>
				<%= link_to @event.url, url_with_protocol(@event.url) %>
				&nbsp;&nbsp;
				<%= link_to @event.url2, url_with_protocol(@event.url2) %>
				&nbsp;&nbsp;
				<%= @event.phone %>
			<% end %>
		</p>

</div>
<div id="button-block">
		<% if @event.start > DateTime.now && is_html %>
		<p>
			<div id="countdown" class="countdown">
		  	<div id="time"></div>
		  	<div id="time-abr" class="time-abr"></div>
		  </div>
		</p>
	<% end %>

	<% if is_html %>
		<div>
			<% if !@event.lat.nil? && !@event.lon.nil? %>
				<%= link_to(image_tag("images/map-marker.png", :alt => t('app.buttons.map')), "#map", :id => "btn-map", :class => "btn-export", :title => t('app.buttons.map')) %>
			<% end %>
			<%= link_to(image_tag("images/Calendar.png", :alt => t('app.buttons.ics')), events_exportICS_path(:type => "event", :typespec => @event.id), :class => "btn-export", :title => t('app.buttons.ics')) %>
			<%= link_to(image_tag("images/PDF.png", :alt => t('app.buttons.pdf_event')), event_path(@event, :format => 'pdf'), :class => "btn-export", :title => t('app.buttons.pdf_event')) %>
			<%= link_to(image_tag("images/Print.png", :alt => t('app.buttons.print_event')), "#", :id => "btn-print", :class => "btn-export", :title => t('app.buttons.print_event')) %>
		</div>

		<% if user_signed_in? %>
			<div>
	    	<%= link_to t('app.buttons.list'), events_path, :class => 'btn' %>
	     <%= link_to t('app.buttons.edit'), edit_event_path(@event), :class => 'btn' %>
	     <%= link_to t('app.buttons.delete'), event_path(@event), :method => 'delete', :confirm => t('app.msgs.delete_confirm'), :class => 'btn btn-danger' %>
			</div>
		<% end %>
	<% end %>
</div>
	<div class="clear">&nbsp;</div>
</div>

<%= simple_format(@event.description) %>

<% if !@event.picture_file_name.nil? %>
	<div id="event_picture_container">
	<%= image_tag @event.picture.url, :id => "event_picture" ,:alt => @event.picture_text %>
	</div>
<% end %>

<div id="sponsor_container">
	<% @event.sponsors.each do |s| %>
		<div style="float: left;padding: 0 3px;">
			<% if !s.logo_file_name.nil? %>
				<%= link_to(image_tag(s.logo.url), sponsor_path(s), :title => s.title) %>
			<% else %>
				<%= link_to(s.title, sponsor_path(s)) %>
			<% end %>
			<p style="text-align: center; font-size: smaller; border-top: solid 1px #ccc;"><%= s.sponsor_type.title %></p>
		</div>
	<% end %>
	<div class="clear"></div>
</div>

