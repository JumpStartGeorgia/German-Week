<% is_html = ((defined? html) && html) ? true : false %>

<h1>Events</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Start</th>
      <th>End</th>
      <% if is_html %>
        <th>Actions</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= link_to event.title, event_path(event) %></td>
        <td><%= event.description %></td>
        <td><%= format_datetime(event.start) %></td>
        <td><%= format_datetime(event.end) %></td>
	<% if is_html %>
          <td>
	    <% if user_signed_in? %>
              <%= link_to 'Edit', edit_event_path(event), :class => 'btn btn-mini' %>
	      <%= link_to 'Destroy', event_path(event), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
	    <% end %>
	<% end %>
						<%= link_to "Export", "/#{params[:locale]}/events/exportICS/event/#{event.id}", :class => "btn btn-mini" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if is_html %>
  <%= link_to 'New Event', new_event_path %>
<% end %>
