<% is_html = ((defined? html) && html) ? true : false %>

<h1>Events</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Start</th>
      <th>Created at</th>
      <% if is_html %>
        <th>Actions</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.id %></td>
        <td><%= link_to event.start, event_path(event) %></td>
        <td><%= event.created_at %></td>
	<% if is_html %>
          <td>
            <%= link_to 'Edit', edit_event_path(event), :class => 'btn btn-mini' %>
            <%= link_to 'Destroy', event_path(event), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
	<% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if is_html %>
  <%= link_to 'New Event', new_event_path %>
<% end %>
