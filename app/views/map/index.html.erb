	<div class="select-events">
		<br />
		<form>
			Please select day: &nbsp;
			<select id="event-day">
				<option></option>
				<% (1..6).each do |i| %>
					<option value="<%= "2012-05-#{i+13}" %>" 
						<% if params[:dayorcategory] == "2012-05-#{i+13}" || params[:day] == "2012-05-#{i+13}" %>
						<%= "selected=\"selected\"" %>
						<% end %>><%= "#{i+13} #{t('date.day_names').to_a[i]}" %></option>
				<% end %>
			</select>
			&nbsp;&nbsp;
			Please select category: &nbsp;
			<select id="event-category">
				<option></option>
				<% @categories.each do |category| %>
					<option value="<%= "#{category.title}" %>"
						<% if params[:dayorcategory] == "#{category.title}" %>
						<%= "selected=\"selected\"" %>
						<% end %>><%= "#{category.title}" %></option>
				<% end %>
			</select>
		</form>
	</div>
	<div id="map_container">
		<div id="map_map_page"></div>
	</div>
	
	
