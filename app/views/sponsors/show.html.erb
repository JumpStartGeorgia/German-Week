<p id="notice"><%= notice %></p>
<h1>
  <b>Title:</b>
  <%= @sponsor.title %>
</h1>

<p>
  <b>Description:</b>
  <%= @sponsor.description %>
</p>

<p>
  <b>Type:</b>
  <%= @sponsor.type %>
</p>

<p>
  <b>Url:</b>
  <%= @sponsor.url %>
</p>

<p>
  <b>Phone:</b>
  <%= @sponsor.phone %>
</p>

<p>
  <b>Address:</b>
  <%= @sponsor.address %>
</p>

<div id='map'></div>

<div class="form-actions">
  <%= link_to 'Back', sponsors_path, :class => 'btn'  %>
  <% if user_signed_in? %>
    <%= link_to 'Edit', edit_sponsor_path(@sponsor), :class => 'btn' %>
    <%= link_to 'Delete', sponsor_path(@sponsor), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
  <% end %>
</div>
