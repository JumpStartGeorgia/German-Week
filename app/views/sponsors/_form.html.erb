<%= semantic_form_for @sponsor do |f| %>
	<%= f.semantic_errors %>
	<%= f.inputs :for => :sponsor_translations do |sponsor_translation, i| %>
		
		<% formLocale = @locales[i-1].language %>
		
		<div id="form-<%= formLocale %>" class="multilanguage" style="<%= 'display:none;' if formLocale.to_s != params[:locale] %>">
			<%= sponsor_translation.input :title %>
			<%= sponsor_translation.input :description, :as => :text %>
  		<%= sponsor_translation.input :address %>
			<%= sponsor_translation.hidden_field :locale , :value => formLocale %>
		</div>

  <% end %>
  	
	<%= f.inputs do %>
		<%= f.input :lat %>
		<%= f.input :lon %>
		<%= f.input :phone, :as => :phone %>
		<%= f.input :url, :as => :url %>
		<%= f.input :type, :as => :radio, :collection => ['Type 1', 'Type 2']%>
		<%= f.hidden_field :locale , :value => I18n.locale %>
	<% end %>

	<%= f.actions :submit, :reset, :cancel %>
<% end %>

