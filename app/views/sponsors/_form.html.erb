<%= semantic_form_for @sponsor do |f| %>
  	<%= f.inputs do %>
  		<%= f.input :title %>
  		<%= f.input :description, :as => :text %>
  		<%= f.input :type, :as => :radio, :collection => ['Type 1', 'Type 2']%>
  		<%= f.input :url, :as => :url %>
  		<%= f.input :phone, :as => :phone %>
  		<%= f.input :address %>
  		<%= f.hidden_field :locale , :value => I18n.locale %>
  	<% end %>
	<%= f.actions :submit, :cancel %>
<% end %>
