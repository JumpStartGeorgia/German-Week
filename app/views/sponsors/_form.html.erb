<%= semantic_form_for @sponsor, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
	<%= f.semantic_errors %>

	<%= f.inputs do %>

		<div class="control-group">
		  <%= f.label :sponsor_type, :class => 'control-label' %>
		  <div class="controls">
		    <%= f.input :sponsor_type, :label => false %>
		  </div>
		</div>
	<% end %>

	<%= f.inputs :for => :sponsor_translations do |sponsor_translation, i| %>
		
		<%  formLocale = nil
				formLocaleName = nil
			@locales.each do |locale| 
			 if locale.language == @sponsor.sponsor_translations[i-1].locale 
				 formLocale = locale.language 
				 formLocaleName = locale.name
					break
			 end 
		 end %>

		<div id="form-<%= formLocale %>" class="multilanguage">
			<h3><%= formLocaleName %></h3>
			<div class="control-group">
			  <%= sponsor_translation.label :title, :class => 'control-label' %>
			  <div class="controls">
			    <%= sponsor_translation.text_field :title, :class => 'text_field', :label => false  %>
			  </div>
			</div>
			<div class="control-group">
			  <%= sponsor_translation.label :description, :class => 'control-label' %>
			  <div class="controls">
			    <%= sponsor_translation.input :description, :as => :text, :label => false %>
			  </div>
			</div>
			<%= sponsor_translation.hidden_field :locale , :value => formLocale %>
		</div>

  <% end %>

	<%= f.inputs do %>

		<div class="control-group">
			<%= f.label :address, :class => "control-label" %>
			<div class="controls">
			  <%= f.text_field :address, :class => "text_field", :label => false %>
			</div>
		</div>
		
		<div class="control-group">
			<%= f.label :phone, :class => "control-label" %>
			<div class="controls">
			  <%= f.text_field :phone, :as => :phone, :class => "text_field", :label => false %>
			</div>
		</div>
		
		<div class="control-group">
			<%= f.label :fax, :class => "control-label" %>
			<div class="controls">
			  <%= f.text_field :fax, :as => :phone, :class => "text_field", :label => false %>
			</div>
		</div>
		
		<div class="control-group">
			<%= f.label :email, :class => "control-label" %>
			<div class="controls">
			  <%= f.text_field :email, :as => :email, :class => "text_field", :label => false %>
			</div>
		</div>
		
		<div class="control-group">
		  <%= f.label :url, :class => 'control-label' %>
		  <div class="controls">
		    <%= f.input :url, :as => :url, :label => false %>
		  </div>
		</div>
		<div class="control-group">
		  <%= f.label :logo, :class => 'control-label' %>
		  <div class="controls">
				<% if !@sponsor.logo_file_name.nil? %>
				Current logo on file: <%= image_tag @sponsor.logo.url %> 
				<br />
				<% end %>
		    <%= f.input :logo, :as => :file, :label => false %>
		  </div>
		</div>
	<% end %>

	<div class="form-actions">
	  <%= f.submit nil, :class => 'btn btn-primary' %>
	  <%= f.submit nil, :class => 'btn btn-danger', :type => :reset, :value => t('app.buttons.reset'), :name => :reset %>
	  <%= link_to t('app.buttons.cancel'), sponsors_path, :class => 'btn' %>
	</div>
  </fieldset>
<% end %>
