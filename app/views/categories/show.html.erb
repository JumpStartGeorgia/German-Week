<h1><%= @category.title %></h1>

<div class="form-actions">
  <%= link_to 'Back', categories_path, :class => 'btn'  %>
  <% if user_signed_in? %>
    <%= link_to t('app.buttons.edit'), edit_category_path(@category), :class => 'btn' %>
    <%= link_to t('app.buttons.delete'), category_path(@category), :method => 'delete', :confirm => t('app.msgs.delete_confirm'), :class => 'btn btn-danger' %>
  <% end %>
</div>
