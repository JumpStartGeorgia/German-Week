<h1><%= t('.title') %></h1>

<% if user_signed_in? %>
	<div class="form-actions">
		<%= link_to t('app.buttons.new_category'), new_category_path, :class => 'btn btn-primary' %>
	</div>
<% end %>

<table class="table table-striped">
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= link_to category.title, category %></td>
        <td>

	  <% if user_signed_in? %>
            <%= link_to t('app.buttons.edit'), edit_category_path(category), :class => 'btn btn-mini' %>
            <%= link_to t('app.buttons.delete'), category_path(category), :method => :delete, :confirm => t('app.msgs.delete_confirm'), :class => 'btn btn-mini btn-danger' %>
	  <% end %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

